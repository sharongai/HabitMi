<% if object.errors.any? %>
  <div class="row error-explanation">
    <div class="twelve columns alert alert-error">
      <h5>The form contains <%= pluralize(object.errors.count, 'error') %></h5>
      <ul class="error-messages-list">
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
