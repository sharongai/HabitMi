<%= form_for @goal, html: { class: 'goals-form' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row first-row">
    <div class="twelve columns">
      <h1 class="u-pull-left">In 66 days...</h1>
      <%= f.text_field :start_date, class: 'no-border u-pull-right',
        placeholder: 'Select the date to start your goal' %>
    </div>
  </div>

  <div class="row second-row">
    <div class="twelve columns">
      <%= f.text_field :title, class: 'u-full-width no-border',
        placeholder: 'What\'s your goal?' %>
    </div>
  </div>

  <div class="row third-row">
    <div class="seven columns goal-invite-list">
      <h5>Invite People</h5>
      <div class="invite-strangers">
        <%= render 'invite_strangers' %>
      </div>
    </div>
    <div class="five columns categories-check-box">
      <h5>Select Categories</h5>
      <ul>
        <% @categories.each do |category| %>
          <li>
            <label>
              <%= check_box_tag 'category_ids[]', category.id %>
              <span class="label-body"><%= category.name%></span>
            </label>
          </li>
        <% end %>
      </ul>
      <br>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
      <%= f.submit class: 'button-primary u-pull-right' %>
    </div>
  </div>
<% end %>
